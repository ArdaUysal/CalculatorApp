<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="right"
            android:text=""
            android:textColor="#999696"
            android:textSize="40sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="AC"
            android:background="@drawable/buton1"
            android:textColor="@color/white"
            android:onClick="click"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/yuzde"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="%"
            android:background="@drawable/buton1"
            android:textColor="@color/white"
            android:onClick="click"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton1"
            android:textColor="@color/white"
            android:text="DEL"
            android:onClick="click"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton1"
            android:onClick="click"
            android:text="รท"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton2"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton1"
            android:text="X"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="5"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton2"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton1"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="1"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="2"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton2"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addition"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton1"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="horizontal">
        <Button
            android:id="@+id/doubleZero"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="00"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="0"
            android:background="@drawable/buton2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/comma"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton2"
            android:text=","
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/buton3"
            android:text="="
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>
